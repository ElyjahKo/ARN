<?xml version="1.0" encoding="UTF-8"?>

<routes>
    <!-- Types de véhicules -->
    <vType id="car" accel="2" decel="4.5" length="5" maxSpeed="14" shape="passenger"/>
    <vType id="emergency" accel="3" decel="6" length="5" maxSpeed="20" shape="emergency"/>

    <!-- Routes -->
    <route id="north_south" edges="NtoC CtoS"/>
    <route id="south_north" edges="StoC CtoN"/>
    <route id="east_west"  edges="EtoC CtoW"/>
    <route id="west_east"  edges="WtoC CtoE"/>

    <!-- Flots de véhicules -->
    <flow id="f1" route="north_south" type="car" begin="0" end="3600" vehsPerHour="500"/>
    <flow id="f2" route="south_north" type="car" begin="0" end="3600" vehsPerHour="500"/>
    <flow id="f3" route="east_west"  type="car" begin="0" end="3600" vehsPerHour="500"/>
    <flow id="f4" route="west_east"  type="car" begin="0" end="3600" vehsPerHour="500"/>

    <!-- Exemple véhicule d'urgence -->
    <vehicle id="ambulance1" type="emergency" route="north_south" depart="10"/>
</routes>
